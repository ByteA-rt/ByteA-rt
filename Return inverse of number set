def invert(lst):
    if lst==[]:
        return []

    negative_numbers=[]
    
    for num in lst:
        negative_numbers.append(-num)
        
    # The below grayed out code would check each number and make it negative only  
    #  if num > 0:
      #     negative_numbers.append(-num)
      #if num < 0:
      #   negative_numbers.append(+num)
            
    return negative_numbers

result = invert(lst)
print (result)

